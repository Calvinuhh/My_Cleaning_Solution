---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Main from "../components/Main.astro";
import textos from "../utils/texts.json";

const {
  headerEnglish,
  routesEnglish,
  headerLanguage: { español },
  footerEnglish,
  indexPageEnglish,
} = textos;
---

<Layout
  pageTitle="Home"
  lang="en"
  content="Cleaning company offering its services in Miami, Florida"
  keywords="Cleaning, Cleaning Company, Cleaning Services"
>
  <Header headers={headerEnglish} routes={routesEnglish} language={español} />
  <Main content={indexPageEnglish} />
  <Footer footer={footerEnglish} />
</Layout>

<style></style>

<script>
  const button = document.querySelector("#home");

  if (window.location.pathname === "/english") {
    button.classList.add("actual");
  }
</script>
