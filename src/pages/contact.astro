---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormEnglish from "../components/FormEnglish.astro";
import textos from "../utils/texts.json";

const {
  headerEnglish,
  routesEnglish,
  headerLanguage: { español },
  footerEnglish,
  formEnglish,
  messageContact: { english },
} = textos;
---

<Layout
  pageTitle="Contact"
  lang="en"
  content="Cleaning company offering its services in Miami, Florida"
  keywords="Cleaning, Cleaning Company, Cleaning Services"
>
  <Header headers={headerEnglish} routes={routesEnglish} language={español} />
  <FormEnglish data={formEnglish} message={english} />
  <Footer footer={footerEnglish} />
</Layout>

<script>
  const button = document.querySelector("#button");
  const buttonLanguage = document.querySelector("#button_language");

  button.addEventListener("click", () => {
    if (window.location.pathname === "/contact") {
      buttonLanguage.setAttribute("href", "/contacto");
    }
  });

  const buttonNav = document.querySelector("#contact");

  if (window.location.pathname === "/contact") {
    buttonNav.classList.add("actual");
  }
</script>
