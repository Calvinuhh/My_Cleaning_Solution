---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import textos from "../utils/texts.json";

const {
  headerEnglish,
  routesEnglish,
  headerLanguage: { español },
  footerEnglish,
  servicesPageEnglish,
} = textos;
---

<Layout
  pageTitle="Services"
  lang="en"
  content="Cleaning company offering its services in Miami, Florida"
  keywords="Cleaning, Cleaning Company, Cleaning Services"
>
  <Header headers={headerEnglish} routes={routesEnglish} language={español} />
  <Section services={servicesPageEnglish} />
  <Footer footer={footerEnglish} />
</Layout>

<style></style>

<script>
  const button = document.querySelector("#button");
  const buttonLanguage = document.querySelector("#button_language");

  button.addEventListener("click", () => {
    if (window.location.pathname === "/services") {
      buttonLanguage.setAttribute("href", "/servicios");
    }
  });

  const buttonNav = document.querySelector("#services");

  if (window.location.pathname === "/services") {
    buttonNav.classList.add("actual");
  }
</script>
