---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Main from "../components/Main.astro";
import textos from "../utils/texts.json";

const {
  headerEspañol,
  routesSpanish,
  headerLanguage: { english },
  footerEspañol,
  indexPageEspañol,
} = textos;
---

<Layout
  pageTitle="Inicio"
  lang="es"
  content="Empresa de limpieza que ofrece sus servicios en Miami, Florida"
  keywords="Limpieza, Empresa de Limpieza, Servicios de Limpieza"
>
  <Header headers={headerEspañol} routes={routesSpanish} language={english} />
  <Main content={indexPageEspañol} />
  <Footer footer={footerEspañol} />
</Layout>

<style></style>

<script>
  const button = document.querySelector("#home");

  if (window.location.pathname === "/") {
    button.classList.add("actual");
  }
</script>
